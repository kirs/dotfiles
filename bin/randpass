#!/usr/bin/env bash
# randpass.sh
# Generate semi-aleatory passwords from command line.
# Usage:
# ./randpass.sh  [NN]
# "NN" is an optional positive integer.
# Default length: 20

if [ -z "$1" ]
then
   LEN=20
else
   LEN=$1
fi

echo $(< /dev/urandom  tr -cd 'a-zA-Z0-9\<>!".$%&/()=?|@#[]{}-_.:,' \
| head -c $LEN)