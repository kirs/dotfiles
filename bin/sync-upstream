NC='\033[0m'

echo "\033[35mExample: git remote add upstream git://github.com/capistrano/rails.git${NC}"

echo "\033[32m Checking master...${NC}"
git checkout master
echo "\033[32m Fetching upstream...${NC}"
git fetch upstream

echo "\033[32m Resetting and pushing back...${NC}"
git reset --hard upstream/master
git push origin master --force
